<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical" >



    <RelativeLayout
        android:id="@+id/cra_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/back_img_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
             />

        <TextView
            android:id="@+id/current_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CT健康报告"
            android:layout_centerInParent="true"
            android:textColor="#434343"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/send_msg_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="发布"
            android:padding="10dp"
            android:textColor="#929292"
            android:textSize="14sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="#e8e8e8"
        android:layout_height="0.5dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:background="#f1f2f4"
                android:layout_height="3dp"/>

            <View
                android:layout_width="match_parent"
                android:background="#f1f2f4"
                android:layout_height="3dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"

                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="类    别"
                    android:layout_gravity="center_vertical"
                    android:textColor="#434343"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content" />
                <RadioGroup
                    android:id="@+id/radioGroupID"
                    android:orientation="horizontal"
                    android:layout_marginLeft="60dp"
                    android:checkedButton="@+id/femaleGroupID"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <RadioButton
                        android:id="@+id/femaleGroupID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="检查报告"
                        android:clickable="true"
                        android:focusable="true"
                        android:textSize="14sp"
                        android:drawablePadding="5dp"

                        android:button="@drawable/radio_selector"
                        android:textColor="#434343"
                        />
                    <RadioButton
                        android:id="@+id/maleGroupID"
                        android:drawablePadding="5dp"

                        android:button="@drawable/radio_selector"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#434343"
                        android:textSize="14sp"
                        android:text="影像片子"/>
                </RadioGroup>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="#f1f2f4"
                android:layout_height="3dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="报告名称"
                    android:textColor="#434343"
                    android:textSize="14sp"
                    android:paddingLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_width="wrap_content"
                    android:hint="未填写"
                    android:maxLength="15"
                    android:layout_alignParentRight="true"
                    android:textColor="#434343"
                    android:paddingRight="10dp"
                    android:background="@null"
                    android:textColorHint="#929292"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_tv" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:background="#f1f2f4"
                android:layout_height="3dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/time_layout">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="检验时间/采样时间"
                    android:textColor="#434343"
                    android:textSize="14sp"
                    android:paddingLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:hint="未填写"
                    android:paddingRight="10dp"
                    android:drawablePadding="5dp"
                    android:textColor="#929292"

                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/time_tv"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:background="#f1f2f4"
                android:layout_height="3dp"/>
            <TextView
                android:layout_width="match_parent"
                android:text="描述"
                android:textSize="14sp"
                android:textColor="#434343"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/detailInfo"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:gravity="top"
                    android:maxLength="200"
                    android:paddingBottom="25dp"
                    android:padding="10dp"
                    android:textColorHint="#898989"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/count_tv"
                    android:layout_width="wrap_content"
                    android:text="0/200"
                    android:maxLength="200"
                    android:textSize="12sp"
                    android:layout_marginRight="15dp"
                    android:paddingBottom="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="#898989"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:text="注:最多可以上传20张图片"
                android:textSize="14sp"
                android:paddingLeft="10dp"
                android:drawablePadding="5dp"
                android:layout_marginTop="10dp"
                android:textColor="#898989"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>



    <!--  </LinearLayout> -->

</LinearLayout>