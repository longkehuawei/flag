<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:background="@android:color/transparent">
    <LinearLayout
        android:id="@+id/pop_child_layout"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dip"
            android:layout_marginLeft="10dip"
            android:layout_marginBottom="10dip"
            android:background="@drawable/shape_popbg">
            <LinearLayout
                android:id="@+id/publish_flag"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dip"
                    android:gravity="center"
                    android:text="发布flag"
                    android:layout_gravity="center_horizontal"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/xiaoflagbaidi"
                    android:textColor="#000000"
                    android:textSize="14sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="#c9c9c9"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:id="@+id/publish_dong"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/pop_title"
                android:layout_width="wrap_content"
                android:layout_height="45dip"
                android:gravity="center"
                android:text="发布动态"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/fabudongtaizhuan"
                android:textColor="#000000"
                android:textSize="14sp"/>
                </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>